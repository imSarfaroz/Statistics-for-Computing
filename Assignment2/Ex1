# Ex 1
import pylab
import random

#identifiies a locatioj
class Location(object):
    #initialization of the values x,y
    def __init__(self, x, y):
        """x and y are numbers"""
        self.x, self.y = x, y
#moves the x and y of self using deltaX,Y
    def move(self, deltaX, deltaY):
        """deltaX and deltaY are numbers"""
        return Location(self.x + deltaX, self.y + deltaY)
    #getter methods 
    def getX(self):
        return self.x

    def getY(self):
        return self.y
    #calculates distance from currentl location to other Location
    def distFrom(self, other):
        ox, oy = other.x, other.y
        xDist, yDist = self.x - ox, self.y - oy
        return (xDist**2 + yDist**2)**0.5
   #returns the location as a string 
    def __str__(self):
        return '<' + str(self.x) + ', ' + str(self.y) + '>'


#contains a dictionary of drunks
class Field(object):
    #creating a dictionary called drunks in constructor 
    def __init__(self):
        self.drunks = {}
    #Adds a drunk    
    def addDrunk(self, drunk, loc):
        #checks if drunk is already in the dictionary
        if drunk in self.drunks:
            #raises error
            raise ValueError('Duplicate drunk')
        #otherwise it adds it 
        else:
            self.drunks[drunk] = loc
    #        
    def moveDrunk(self, drunk):
        #if drunk is not in the field it raises error
        if drunk not in self.drunks:
            raise ValueError('Drunk not in field')
        #drunk takes a step, calling each individual takeStep method stores as XDist     
        xDist, yDist = drunk.takeStep()
        #stores location as currentLocation
        currentLocation = self.drunks[drunk]
        #moves currentlocation by xDist and yDist and stores 
        self.drunks[drunk] = currentLocation.move(xDist, yDist)
    #checking if drunk is in field and returning location if it is     
    def getLoc(self, drunk):
        if drunk not in self.drunks:
            raise ValueError('Drunk not in field')
        return self.drunks[drunk]
        

# Fugire 14.3
class Drunk(object):
    #takes gives the object a name 
    def __init__(self, name = None):
        """Assumes name is a str"""
        self.name = name
#overriding string method, if null return Anonymous otherwise return name
    def __str__(self):
        if self != None:
            return self.name
        return 'Anonymous'

class UsualDrunk(Drunk):
    def takeStep(self):
        stepChoices = [(0,1), (0,-1), (1, 0), (-1, 0)]
        return random.choice(stepChoices)
        return random.choice(stepChoices)
    
def walk(f, d, numSteps):
    """Assumes: f a Field, d a Drunk in f, and numSteps an int >= 0.
        Moves d numSteps times; returns the distance between the
        final location and the location at the start of the  walk."""
    start = f.getLoc(d)
    for s in range(numSteps):
        f.moveDrunk(d)
    return start.distFrom(f.getLoc(d))


def getFinalLocs(numSteps, numTrials, dClass):
    locs = []
    d = dClass()
    for t in range(numTrials):
        f = Field()
        f.addDrunk(d, Location(0, 0))
        for s in range(numSteps):
            f.moveDrunk(d)
        locs.append(f.getLoc(d))
    return locs

def plotLocs(drunkKinds, numSteps, numTrials):
    styleChoice = styleIterator(('k+', 'r^', 'mo'))
    for dClass in drunkKinds:
        locs = getFinalLocs(numSteps, numTrials, dClass)
        xVals, yVals = [], []
        for loc in locs:
            xVals.append(loc.getX())
            yVals.append(loc.getY())
        meanX = sum(xVals)/len(xVals)
        meanY = sum(yVals)/len(yVals)
        curStyle = styleChoice.nextStyle()
        pylab.plot(xVals, yVals, curStyle,
                      label = dClass.__name__ + ' mean loc. = <'
                      + str(meanX) + ', ' + str(meanY) + '>')
    pylab.title('Location at End of Walks ('
                + str(numSteps) + ' steps)')
    pylab.xlabel('Steps East/West of Origin')
    pylab.ylabel('Steps North/South of Origin')
   # pylab.legend(loc = 'lower left')


class oddField(Field):
    def __init__(self, numHoles, xRange, yRange):
        Field.__init__(self)
        self.wormholes = {}
        for w in range(numHoles):
            x = random.randint(-xRange, xRange)
            y = random.randint(-yRange, yRange)
            newX = random.randint(-xRange, xRange)
            newY = random.randint(-yRange, yRange)
            newLoc = Location(newX, newY)
            self.wormholes[(x, y)] = newLoc

    def moveDrunk(self, drunk):
        Field.moveDrunk(self, drunk)
        x = self.drunks[drunk].getX()
        y = self.drunks[drunk].getY()
        if (x, y) in self.wormholes:
            self.drunks[drunk] = self.wormholes[(x, y)]    
            
class styleIterator(object):
    def __init__(self, styles):
        self.index = 0
        self.styles = styles
        
    def nextStyle(self):
        result = self.styles[self.index]
        if self.index == len(self.styles) - 1:
            self.index = 0
        else:
            self.index += 1
        
        return result
    
# New biased Random walk
class RecklessDrunk(Drunk):
    def takeStep(self):
        stepChoices = [(0.0, 0.5), (0.5, 0.0)]
        return random.choice(stepChoices)
    
        
# Part 2 of Ex1
#Run a random walk with 100 trials
plotLocs((UsualDrunk, RecklessDrunk), 100, 200)  # 100 steps
plotLocs((UsualDrunk, RecklessDrunk), 1000, 200) # 1000 steps
